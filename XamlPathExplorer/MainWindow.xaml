<Controls:MetroWindow x:Class="XamlPathExplorer.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:local="clr-namespace:XamlPathExplorer"
                      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                      xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
                      xmlns:myControls="clr-namespace:PathButton;assembly=PathButton"
                      mc:Ignorable="d"
                      Title="Xaml Path Explorer"
                      ResizeMode="CanResizeWithGrip"
                      WindowState="Maximized"
                      BorderBrush="{DynamicResource AccentColorBrush}"
                      Width="735"
                      Height="600">
    <Controls:MetroWindow.Resources>
        <Style x:Key="DragEnter"
               TargetType="Panel">
            <Setter Property="Background"
                    Value="{DynamicResource HighlightBrush}" />
        </Style>
        <Style x:Key="DragLeave"
               TargetType="Panel">
            <Setter Property="Background"
                    Value="{DynamicResource WindowBackgroundBrush}" />
        </Style>
    </Controls:MetroWindow.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="100" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Grid.RowSpan="2">
            <WrapPanel x:Name="itemsPanel"
                       Margin="10">
                <i:Interaction.Behaviors>
                    <ei:FluidMoveBehavior AppliesTo="Children"
                                          Duration="0:0:0.3">
                        <ei:FluidMoveBehavior.EaseY>
                            <CubicEase EasingMode="EaseInOut" />
                        </ei:FluidMoveBehavior.EaseY>
                        <ei:FluidMoveBehavior.EaseX>
                            <CubicEase EasingMode="EaseInOut" />
                        </ei:FluidMoveBehavior.EaseX>
                    </ei:FluidMoveBehavior>
                </i:Interaction.Behaviors>

                <myControls:PathButton Content="Test Button" Background="White" Foreground="Black" />

                <local:PathButton PathGeometry="M9.5999776,12.699997L11.899997,15.099998 13.299991,14.300003 19.000005,20 22.899999,18 28.299995,20.699997 28.299995,25.699997 3.5999767,25.699997 3.5999767,18.599998z M20.500005,11.699997L21.199987,11.699997 21.000005,12.800003 20.699987,12.800003z M23.09998,10.699997L23.799993,11.599998 23.59998,11.800003 22.699987,11.099998z M18.699987,10.699997L19.199987,11.199997 18.299993,11.900002 18.000005,11.599998z M23.59998,8.5999985L24.699987,8.8000031 24.699987,9 23.59998,9.1999969z M18.09998,8.5999985L18.09998,9.3000031 17.000005,9 17.000005,8.8000031z M20.799993,7C21.899999,7 22.699987,7.9000015 22.699987,8.9000015 22.699987,10 21.799993,10.800003 20.799993,10.800003 19.699987,10.800003 18.899999,9.9000015 18.899999,8.9000015 18.899999,7.8000031 19.799993,7 20.799993,7z M23.500005,6.0999985L23.699987,6.3000031 23.000005,7.1999969 22.500005,6.6999969z M18.199987,6.0999985L19.09998,6.8000031 18.59998,7.3000031 18.000005,6.3000031z M20.699987,5L21.000005,5 21.199987,6.0999985 20.500005,6.0999985z M2.1999823,2.4000015L2.1999823,26.800003 29.400001,26.800003 29.400001,2.4000015z M0,0L31.900001,0 31.900001,32 0,32z" />

                <local:PathButton PathGeometry="M4.4040003,26.999993L2,29.322993 2,29.999993 30,29.999993 30,29.314994 27.620001,26.999993z M21,11.999L21,24.999993 26,24.999993 26,11.999z M13.008997,11.999L13.008997,24.999993 19,24.999993 19,11.999z M6,11.999L6,24.999993 11.008997,24.999993 11.008997,11.999z M16.003998,2.3219924L3.098999,9.9989986 29,9.9989986 29,9.918005z M15.995003,0L31,8.7699938 31,11.999 28,11.999 28,24.999993 28.433001,24.999993 32,28.471993 32,31.999993 0,31.999993 0,28.475993 3.5959997,24.999993 4,24.999993 4,11.999 1,11.999 1,8.9209948z" />

                <local:PathButton PathGeometry="M11.299974,18.9L11.299974,25.600005 15.100018,22.300002z M11.299974,6.0999993L11.299974,12.800001 15.100018,9.499997z M8.4000143,0L19.299964,9.3999985 11.999985,15.899999 19.400001,22.4 8.4000143,32.000001 8.4000143,19.100005 2.2000095,24.499999 0,22.499999 7.600027,15.999998 0,9.3 2.2000095,7.3 8.4000143,12.700002z" />

            </WrapPanel>
        </ScrollViewer>

        <Grid x:Name="dragAndDropContainer"
              Grid.Row="2"
              AllowDrop="True"
              DragDrop.DragEnter="wrapPanel_DragEnter"
              DragDrop.DragLeave="wrapPanel_DragLeave"
              DragDrop.Drop="wrapPanel_Drop"
              Grid.ColumnSpan="3">
            <Rectangle x:Name="dragAndDropRectangle"
                       Margin="5"
                       Stroke="{DynamicResource HighlightBrush}"
                       StrokeThickness="2"
                       StrokeDashArray="5" />
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="35"
                       Foreground="{DynamicResource TextBrush}"><Run Text="Drag and drop files here..." /></TextBlock>
        </Grid>

        <StatusBar x:Name="statusBar"
                   Grid.Row="3"
                   Grid.ColumnSpan="3">
            <StatusBarItem>XAML Path Explorer</StatusBarItem>
            <Separator Style="{StaticResource MetroStatusBarSeparator}" />
            <StatusBarItem x:Name="statusBarItem"
                           Content="Ready! Drag and drop files in the app..." />
        </StatusBar>
        <GridSplitter Background="{DynamicResource AccentColorBrush}"
                      Grid.Column="1"
                      Width="5"
                      ResizeBehavior="PreviousAndNext"
                      ShowsPreview="True"
                      Grid.RowSpan="2" />
        <Label x:Name="LoadedFile" Content="No file loaded..."
               Grid.Column="2" />
        <avalonEdit:TextEditor xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
                               Name="textEditor"
                               Grid.Column="2"
                               FontFamily="Consolas"
                               IsReadOnly="True"
                               ShowLineNumbers="True"
                               WordWrap="True"
                               FontSize="12pt"
                               Background="Transparent"
                               Foreground="#c0c0c0"
                               Grid.Row="1" />
    </Grid>
</Controls:MetroWindow>
